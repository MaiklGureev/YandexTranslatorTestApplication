<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/CardStyle">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/originalLanguageTextView"
                style="@style/AlertDialogTextViewStyle"

                android:hint="Original language: en"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/originalTextTextView"
                style="@style/AlertDialogTextViewStyle"
                android:hint="Some original text ... "
                android:textSize="10sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/translatedLanguageTextView"
                style="@style/AlertDialogTextViewStyle"
                android:hint="Translated language: ru"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/translatedTextView"
                style="@style/AlertDialogTextViewStyle"
                android:hint="Translated text ... "
                android:textSize="10sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>